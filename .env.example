# YAMEYAME 환경 변수 템플릿
# 이 파일을 .env로 복사하고 실제 값으로 교체하세요

# 기본 설정
NODE_ENV=development
PORT=3000
HOST=localhost

# 데이터베이스 설정
DATABASE_URL="file:./dev.db"
# 프로덕션에서는 PostgreSQL 사용
# DATABASE_URL="postgresql://username:password@host:port/database"

# JWT 시크릿 키 (프로덕션에서 반드시 변경)
JWT_SECRET=development-secret-key-change-in-production
JWT_EXPIRES_IN=24h

# Redis 설정 (선택적)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# 외부 API 키들
BAND_API_KEY=your-band-api-key
BAND_CLIENT_ID=your-band-client-id
BAND_CLIENT_SECRET=your-band-client-secret

# Google API (선택적)
GOOGLE_API_KEY=your-google-api-key
GOOGLE_CLIENT_ID=your-google-client-id

# 모니터링 설정
MONITORING_PORT=9999
MONITORING_ENABLED=true
METRICS_ENABLED=true

# 파일 업로드 설정
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# 이메일 설정 (선택적)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@yameyame.app

# 푸시 알림 설정 (선택적)
FIREBASE_PROJECT_ID=
FIREBASE_PRIVATE_KEY=
FIREBASE_CLIENT_EMAIL=

# 로깅 설정
LOG_LEVEL=info
LOG_FILE=logs/app.log

# 성능 설정
API_RATE_LIMIT=100
API_RATE_WINDOW=900000
SESSION_TIMEOUT=86400000

# 보안 설정
CORS_ORIGINS=http://localhost:3000,http://localhost:8081
TRUST_PROXY=false
HELMET_ENABLED=true

# 개발 모드 설정
MOCK_MODE=false
DEBUG_MODE=false
HOT_RELOAD=true

# 프로덕션 설정 (프로덕션 환경에서만)
# CLUSTER_MODE=true
# WORKER_COUNT=auto
# PM2_ENABLED=true

# AWS 설정 (클라우드 배포시)
# AWS_REGION=ap-northeast-2
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# S3_BUCKET_NAME=yameyame-uploads

# Docker 설정
DOCKER_REGISTRY=ghcr.io
DOCKER_IMAGE_TAG=latest